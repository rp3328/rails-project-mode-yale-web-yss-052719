
<% if flash[:error] %>
  <% flash[:error].each do |err| %>
    <li><%=  err %></li>
  <% end %>
<% end %>

<h1>Sign up for PokeDex</h1>
<%= form_for @user do |f| %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
<%= f.label :fav_type %>
<%= f.text_field :fav_type %>
<%= f.label :fav_stat %>
<%= f.text_field :fav_stat %>
<%= f.submit %>
<% end %>