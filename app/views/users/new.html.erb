<% @arr = ["hp", "attack", "defense", "sp_attack", "sp_defense", "speed"]%>
<% if flash[:error] %>
  <% flash[:error].each do |err| %>
    <li><%=  err %></li>
  <% end %>
<% end %>

<h1>Sign Up for PokeDex</h1>
<%= form_for @user do |f| %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name %> <br>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <%= f.label :email %>
  <%= f.email_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>
<%= f.label :fav_type %>
<select id='user_fav_type' name='fav_type'>
    <% Pokemon.types.each do |type|%>
        <option value="<%=type%>"> <%= type %> </option>
    <% end%>
</select>
<br>

<%= f.label :fav_stat %>
<select id='user_fav_stat' name='fav_stat'>
    <% @arr.each do |stat|%>
        <option value="<%=stat%>"> <%= stat %> </option>
    <% end%>
</select>


<%# f.collection_select(:pokemon_ids, @pokemons, :id, :name) %><br>
<%= f.submit %>
<% end %>