<% @stat_list = ["hp", "attack", "defense", "sp_attack", "sp_defense", "speed"]%>
<% if flash[:error] %>
  <% flash[:error].each do |err| %>
    <li><%=  err %></li>
  <% end %>
<% end %>

<h1>Edit user</h1>
<%= form_for @user do |f| %>
  <%= f.label :full_name %>
  <%= f.text_field :full_name %> <br>
  <%= f.label :username %>
  <%= f.text_field :username %><br>
  <%= f.label :email %>
  <%= f.email_field :email %><br>
  <%= f.label :password %>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br>
  <%= f.label :fav_type %>
  <%= f.collection_select :fav_type, @types, :name, :name %> <br>
  <%= f.label :fav_stat %>
  <%= f.collection_select :fav_stat, @stat_list, :to_s, :to_s %><br>
  <%= f.submit %>
<% end %>

<hr>
<%= link_to 'Delete Account', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %> 
